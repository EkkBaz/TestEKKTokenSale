#!/usr/bin/env bash
set -e

export DAPP_NO_SAVE=1
export ETH_GAS=4000000
export ETH_KEYSTORE=/home/aftnix/.dapp/testnet/8545/keystore/
export ETH_FROM=0x26C35Ba70125853208AB463136F0D9AaF7a8e3A7
export BENIFICIARY_KEY=0x40298bef6d91762787479c5f2ca162627bb8d528
token=$(set -x; dapp create DSToken \
  $(seth --to-bytes32 $(seth --from-ascii EKK))
)

sale=$(set -x; dapp create Tokensale2 $BENIFICIARY_KEY \
     1000 \
     180 \
     $(seth --to-uint256 $(seth --to-wei 0.0005 eth)) \
     200 \
     100000000 \
 )

 (set -x; seth send "$token" "setOwner(address)" "$sale")
 (set -x; seth send "$sale" "initialize(address)" "$token")

echo "token=$token"
echo "sale=$sale"
#set -x; seth call  "$token" "totalSupply()"
